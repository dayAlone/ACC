.map-columns
	td
		width (100/2)%
	ul
		font-size 13px
		&.map-level-0
			> li
				list-style none
				margin-bottom 20px
				> ul
					padding-left 20px
					margin-top 10px
					li
						> a
							font-size 12px
							font-weight normal
				> a
					font-size 18px

	
.page
	padding-bottom 40px
	color white
	full-width()
	.xs-center
		full-width()
		text-align center
		@media (min-width: scr_sm)
			text-align inherit
	img.map
		display none
		@media (min-width: scr_sm)
			display inline-block
	img
		max-width 100%
	.index &
		padding-bottom 0
	&__title
		font-size 35px
		line-height 30px
		color white
		text-transform: uppercase
		font-weight: bold
		position relative
		margin-top 0
		@media (min-width: scr_sm)
			margin-top 20px
			font-size 45px
			line-height 40px
		&--no-description
			&:after
				display none !important
		&:after
			margin-left 20px
			content attr(data-more)
			position absolute
			left 100%
			font-weight normal
			top -5px
			color #a3a3a3
			text-transform none
			display none
			@media (min-width: scr_md)
				display block
				width 55%
				font-size 12px
				line-height 14px
			@media (min-width: scr_lg)
				width 100%
				font-size 14px
				line-height 18px
	&__blue-title
		color blue2
		margin-bottom 15px
	&__divider
		width 100%
		border-bottom 1px solid rgba(255,255,255,.25)
		margin 20px 0
		@media (min-width: scr_sm)
			margin 30px 0
	a
		color white
		&:hover
			color blue2
			text-decoration: underline
	p
		font-size 15px	
		@media (min-width: scr_sm)
			font-size 16px
		font-weight 300
	h2
		font-weight 300
		font-size 22px
		@media (min-width: scr_sm)
			font-size 30px
	h4
		font-size 12px
		text-transform: uppercase
		margin-bottom 5px
		font-weight bold
	.list
		padding 0
		margin 10px 0 0
		font-size 16px
		list-style none
		margin-left 20px
		@media (min-width: scr_sm)
			margin-left 0
		li
			margin-bottom 10px
			max-width 90%
			font-weight 300
			position relative
			font-size 15px
			line-height 16px
			@media (min-width: scr_sm)
				font-size 16px
				line-height inherit
			&:after
				content ""
				width 5px
				height 5px
				border-radius 5px
				background blue2
				position absolute
				top 6px
				left -15px
				@media (min-width: scr_sm)
					top 8px
	big
		font-size 16px
		display inline-block
		@media (min-width: scr_sm)
			font-size 20px
			line-height 35px
	.button
		display inline-block
		padding 0 23px
		cursor pointer
		font-size 12px
		line-height 33px
		margin 20px 0
		border-radius 30px
		height 30px
		border 1px solid blue2
		color blue2
		text-transform: uppercase
		font-weight bold
		t(background, color)
		text-align: center
		&:hover
			background blue2
			color black
			text-decoration: none
		&--big
			padding 0 33px
			min-width 216px 
			max-width 100%
			@media (min-width: scr_sm)
				min-width 100px
				padding 0 15px
		&--white
			color white
			border-color white
			&:hover
				color black
				background white
	.partners-list
		line-height 110px
		text-align center
	.tech
		&__item
			.row
				> div:last-of-type
					padding-left 0
					@media (min-width: scr_xs)
						padding-left 15px
			margin-top 20px

			full-width()
			background rgba(0,0,0,.45)
			padding 13px 13px 6px
			t(background)
			&:hover
				@media (min-width: scr_md)
					background #0082dc !important
					.tech__link
						opacity 1
			@media (min-width: scr_sm)
				margin-top 30px
				padding 13px 13px 10px
		&__image
			full-width()
			height 80px
			background-size cover
			background-position center center
			margin-bottom 7px
			@media (min-width: scr_sm)
				height 120px
		&__title
			full-width()
			font-size 13px
			min-height 55px
			line-height 16px
			padding-bottom 12px
			padding-top 3px
			font-weight 300
			&:hover
				text-decoration none
				color white
		&__link
			padding-left 23px
			position relative
			full-width()
			line-height 26px
			opacity .6
			font-size 10px
			font-weight bold
			text-transform uppercase
			t(opacity)
			&:hover
				text-decoration: none
				color white
			font-size 8px
			@media (min-width: scr_xs)
				padding-left 31px
				font-size 10px
			svg
				position absolute
				left 0
				top 0
				max-width 17px
				max-height 22px
				@media (min-width: scr_xs)
					max-width 26px
					max-height 22px
		&__video
			left -3px
		&__photos
			left 0px
			svg
				max-height 20px
				top 0px
	.filter + .services
		margin-top 20px
		@media (min-width: scr_sm)
			display none
		full-width()
	.services
		margin-top 30px
		width 100%
		&__image
			height 80px
			full-width()
			background-repeat no-repeat
			background-position center center
			background-size cover
			@media (min-width: scr_sm)
				height 100px
		&__title
			middle()
			font-size 12px
			color #a7a8a8
			line-height 14px
			t(color)
			@media (min-width: scr_sm)
				font-size 18px
				line-height 20px

		&__item
			.row
				> div:last-of-type
					padding-left 0
					padding-right 5px
					@media (min-width: scr_sm)
						padding-left 15px
						padding-right 15px
			display inline-block
			width 100%
			padding 7px 13px 0px
			.map &
				margin-left 0
			line-height 85px
			@media (min-width: scr_sm)
				line-height 105px
			margin-left -13px
			&:hover
				@media (min-width: scr_md)
					padding 13px 13px 8px
					margin-top -6px
					margin-bottom -8px
					t(background)
					background black
					.services__title
						color white
	.years, .pages
		display none
		@media (min-width: scr_sm)
			display inline-block
		&__item
			middle()
			font-size 11px
			font-weight bold
			height 20px
			line-height 22px
			padding 0 8px
			margin-left 3px
			border-radius 20px
			border 1px solid transparent
			&:hover
				text-decoration: none
				color white
				border 1px solid blue
			&--active
				border 1px solid blue
	.pages
		margin-top: 20px
		&__item
			font-size 12px
			line-height 26px
			height 24px
	article
		.news
			margin-right -7px
			margin-left -7px
			&__date
				line-height 15px
				height 22px
				full-width()
				font-size 10px
				color blue2
			&__picture + .news__date
				@media (min-width: scr_sm)
					line-height 42px
					height 40px
			&__title
				display inline-block
				font-size 14px
				line-height 16px
				font-weight 300
				&:hover
					color white
			&__item
				width 100%
				vertical-align top
				display inline-block
				padding 0 7px 14px
				&:hover
					color white
				@media (min-width: scr_sm)
					width (100/3)%
				@media (min-width: scr_md)
					width (100/4)%
			&__picture
				full-width()
				background-repeat no-repeat
				background-position center center
				background-size cover
				height 130px
				display none
				@media (min-width: scr_sm)
					display block
			&__frame
				padding 15px 15px 12px
				t(background-color)
				background rgba(0,0,0,.45)
				overflow hidden
				&:hover
					@media (min-width: scr_md)
						background #0082dc !important
						color white
						.news__date
							color white
	.filter, .select
		full-width()
		position relative
		z-index 20
		background #161616
		height 37px
		margin-top 10px
		line-height 42px
		padding 0 15px
		font-size 12px
		text-transform: uppercase
		font-weight bold
		&__item
			margin-right 20px
			color #9c9c9c
			position relative
			span
				display none
				@media (min-width: scr_lg)
					display inline
					margin-left 5px
			&:after
				border-bottom 1px dotted #595959
				width 100%
				content ""
				bottom 3px
				left 0
				position absolute
				t(border-color)
			&--yellow, &--blue
				margin-left 15px
				&:before
					position absolute
					left -14px
					top 2px
					width 9px
					height 9px
					border-radius 5px
					content ""

			&--yellow:before
				background #c31735
			&--blue:before
				background #032c5a
			&:hover, &--active
				text-decoration none
				color white
				&:after
					border-bottom-color white
			&--active
				&:after
					opacity 0
	.select
		padding 0
		margin 0
		&__item
			margin-right: 0px
			margin-left 10px
	.dropdown
		margin-left 5px
		margin-right -10px
		position relative
		font-size 12px
		font-weight bold
		text-transform: uppercase
		position relative
		.news &
			display inline-block
			margin-top 10px
			@media (min-width: scr_sm)
				display none
		&__select
			position absolute
			right 0
			top 0
			opacity 0
			z-index 20
			@media (min-width: scr_md)
				display none
		&--open
			.dropdown__trigger
				svg
					path
						fill white
				text-decoration none
				color white
				.dropdown__text
					color white
				&:after
					border-bottom-color white
		&__trigger
			color #9c9c9c
			z-index: 2
			position relative
			padding-right 10px
			line-height 8px
			svg
				margin-left 5px
				position relative
				top -1px
				
		&__text	
			position relative
			border-bottom 1px dotted #595959
			max-height 26px
			display inline-block
			&--white
				color white
		&__frame
			background blue
			display none
			padding 25px 5px 0px
			border-radius 5px
			position absolute
			top -4px
			left -5px
			min-width 100%
		&__item
			float: left
			clear: both
			font-size 11px
			line-height 19px
			&:hover
				color #18a5f7
				text-decoration none
	.search-page
		full-width()
		font-size 14px
		&__text, &__sort
			font-size 14px
		&__title
			font-weight bold
			font-size 18px
			margin-bottom 8px
			display inline-block
		small
			width 100%
			display inline-block
		form
			input[type=text]
				background transparent
				border 1px solid blue
				height 35px
				line-height 38px
				border-radius 30px
				padding 0 50px 0 20px
			button[type=submit]
				background transparent
				border 0
				margin-left -44px
				display inline-block
				svg
					position relative
					top 4px
					min-height 20px
					min-width 20px
