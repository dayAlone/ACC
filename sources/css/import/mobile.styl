.modal
	.lang-trigger
		margin 17px 20px 15px
	.phone
		full-width()
		text-align: center
		font-size 37px
		color white
		padding 20px 0
		font-weight bold
	.form-trigger
		font-size 25px
		font-weight bold
		color white
		height 25px
		display inline-block
		border-bottom 1px dotted white
		text-align center
		text-transform: uppercase
	.form
		full-width()
		padding-bottom 40px
		padding 0 20px
		display none
		label
			full-width()
			margin-top 20px
			text-align center
			font-size 10px
			text-transform: uppercase
		input[type="text"], input[type="email"], textarea
			border 0
			appearance none
			full-width()
			border-radius 0
			color black
			text-align center
			padding-top 12px
			line-height 27px
			height 30px
		textarea
			height 180px
			text-align left
		.captcha
			full-width()
			background-color #737a82
			height 30px
		input[type="submit"]
			appearance none
			middle()
			background transparent
			margin-top 20px
			margin-bottom 20px
			border-radius 30px
			height 30px
			border 1px solid blue2
			padding 5px 25px 0
			font-weight bold
			text-transform: uppercase
	&-title
		full-width()
		color white
		padding 0 20px
		line-height 55px
		height 55px
		font-size 11px
		text-transform uppercase		
		font-weight bold
	.search
		padding 20px
		&__input
			height 40px
			font-size 15px
			padding 0 25px 0 15px
			border-radius 50px
			border-weight 2px
		&__submit
			right 30px
			top 30px
			svg
				width 20px
				height 20px
.nav-popup
	border-top 1px solid #404040
	full-width()
	&__item
		border-bottom 1px solid #404040
		full-width()
		color white
		padding 0 20px
		line-height 62px
		height 55px
		font-weight: bold
		text-transform: uppercase
		font-size: 26px
		#Sites &
			font-size 16px
		&:hover, &--active
			background blue2
			color white