.footer
	full-width()
	position relative
	z-index 20
	color #a3a3a3
	overflow hidden
	background black
	border-top 1px solid #212121
	min-height 65px
	padding 22px 0 13px
	font-weight bold
	text-transform uppercase
	font-size 10px
	a
		color #a3a3a3
		text-decoration: underline
		&:hover
			color blue
	.social
		full-width()
		&__item
			middle()
			width 23px
			height 23px
			line-height 23px
			margin 0 5px
			opacity .5
			text-align: center
			t(opacity)
			&:hover
				opacity 1
			svg
				middle()
				max-height 100%
				max-width 100%
	.radia
		float right
		t(opacity)
		opacity .5
		display none
		.index &
			display block
		&:hover
			opacity 1
		svg
			max-height 27px
			max-width 27px
			margin-right: 10px
			float left
		&__content
			float left
			color #fff
			text-decoration: none