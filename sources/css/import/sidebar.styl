.sidebar
	full-width()
	z-index 10
	position relative
	padding-bottom 30px
	@media (min-width: scr_sm)
		padding-bottom 80px
.sidebar, article.index-page	
	.news
		full-width()
		text-align: center
		background #1b1b1b
		width 110%
		padding 12px 0 5px
		margin-left -5%
		@media (min-width: scr_sm)
			padding 0
			width 100%
			margin-left 0
			background transparent
			max-width 75%
			text-align: left
		&__item
			full-width()
			position relative !important

		&__date
			color blue2
			font-size 10px
			font-weight bold
			margin-bottom 2px
		&__title
			color white
			text-decoration underline
			font-size 13px
			line-height 16px
			float left
			margin-bottom 0
			@media (min-width: scr_sm)
				margin-bottom 25px
			&:hover
				color blue2
		&__more
			font-size 10px
			text-transform uppercase
			color blue2
			font-weight bold
			&:hover
				text-decoration underline
article.index-page
	.news
		height auto !important
		
		&__more
			full-width()
			margin 10px 0