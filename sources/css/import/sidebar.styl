.sidebar
	full-width()
	z-index 10
	position relative
	padding-bottom 30px
	@media (min-width: scr_sm)
		padding-bottom 80px
	.logo
		full-width()
		@media (min-width: scr_sm)
			margin-bottom 90px
		svg
			max-width 70%
			@media (min-width: scr_sm)
				max-width 100%
	.nav-left
		full-width()
		margin-bottom 60px
		&__item
			float left
			clear both
			font-size 18px
			font-weight bold
			text-transform uppercase
			color white
			line-height 31px
			height 32px
			padding 3px 15px 0
			margin-left -15px
			margin-bottom 5px
			white-space nowrap
			&--active
				color blue
				border 1px solid blue
				border-radius 20px
			&:hover
				color blue
				text-decoration: none
.sidebar, article.index-page	
	.news
		full-width()
		text-align: center
		background #1b1b1b
		width 110%
		padding 12px 0 5px
		margin-left -5%
		@media (min-width: scr_sm)
			padding 0
			width 100%
			margin-left 0
			background transparent
			max-width 75%
			text-align: left
		&__item
			full-width()
			position relative !important

		&__date
			color blue2
			font-size 10px
			font-weight bold
			margin-bottom 2px
		&__title
			color white
			text-decoration underline
			font-size 13px
			line-height 16px
			float left
			margin-bottom 0
			@media (min-width: scr_sm)
				margin-bottom 25px
			&:hover
				color blue2
		&__more
			font-size 10px
			text-transform uppercase
			color blue2
			font-weight bold
			&:hover
				text-decoration underline
article.index-page
	.news
		height auto !important
		
		&__more
			full-width()
			margin 10px 0