.sidebar
	full-width()
	padding-bottom 80px
	z-index 10
	position relative
	.logo
		full-width()
		margin-bottom 90px
		svg
			max-width 100%
	.nav-left
		full-width()
		margin-bottom 60px
		&__item
			float left
			clear both
			font-size 18px
			font-weight bold
			text-transform uppercase
			color white
			line-height 31px
			height 32px
			padding 3px 15px 0
			margin-left -15px
			margin-bottom 5px
			white-space nowrap
			&--active
				color blue
				border 1px solid blue
				border-radius 20px
			&:hover
				color blue
				text-decoration: none
	.news
		full-width()
		max-width 75%
		&__item
			full-width()
		&__date
			color blue2
			font-size 10px
			font-weight bold
			margin-bottom 2px
		&__title
			color white
			text-decoration underline
			font-size 13px
			line-height 16px
			float left
			margin-bottom 25px
			&:hover
				color blue2
		&__more
			font-size 10px
			text-transform uppercase
			color blue2
			font-weight bold
			&:hover
				text-decoration underline