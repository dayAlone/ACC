body
	font-family 'Proxima', 'Helvetica Neue', 'Arial', sans-serif
	min-height 100%
	height 100%
	color white
	&.map
		min-height 850px
	
a
	transition-property color, background-color, border-radius, box-shadow, border-radius
	transition-duration .3s
	&:hover
		text-decoration none
.container
	max-width 1150px
.wrap 
	full-width()
	min-height: 100%
	padding-bottom 65px
	margin-bottom: -65px
	&:after
		content ""
		display block
	.transparent &
		background transparent
	b('bg.jpg', top center no-repeat, black, cover)
	for x in index about contacts partners tech news
		.{x} &
			b('bg_'+x+'.jpg', top center no-repeat, black, cover)
			
	.index &
		
		b('bg_index_xs.jpg', top center no-repeat, black)

		@media (min-width: scr_sm)
			b('bg_index.sm.jpg', top center no-repeat, black)
		@media (min-width: scr_md)
			b('bg_index_md.jpg', top center no-repeat, black)
		@media (min-width: scr_lg)
			b('bg_index_lg.jpg', top center no-repeat, black, cover)
html
	height 100%

article
	position relative
	z-index 10

.index-page
	full-width()
	float right
	margin-top 180px
	padding-top 20px
	position relative
	@media (min-width: scr_xs)
		margin-top 230px
	@media (min-width: scr_md)
		margin-top 295px
		max-width 509px
	@media (min-width: scr_md) and (min-height: 700px)
		position absolute
		left 50%
		bottom 100px
		margin-left -40px
	@media (min-width: scr_lg) and (min-height: 700px)
		margin-left 50px
	.bages
		@media (min-width: scr_sm)
			left 2%
	.highlight
		text-align center
		full-width()
		margin-bottom 35px
		@media (min-width: scr_md)
			text-align right
		h1
			width 100%
			float right
			padding-bottom 10px
			margin-bottom 0px
			text-transform: uppercase
			font-weight bold
			font-size 20px
			line-height 20px
			@media (min-width: scr_xs)
				font-size 25px
				line-height 30px
			@media (min-width: scr_sm)
				font-size 35px
				line-height 35px
			br
				@media (min-width: scr_sm)
					display none
				@media (min-width: scr_md)
					display inline

		p
			full-width()
			font-size 14px
			line-height 18px
			@media (min-width: scr_sm)
				font-size 20px
				line-height 25px
.page
	.bages
		text-align center
		position relative
		@media (min-width: scr_sm)
			margin-bottom 0
			text-align left
			line-height: 54px
			margin-bottom 30px
		@media (min-width: scr_md)
			display none
		&__image
			max-width 54px
			margin-bottom 10px
			@media (min-width: scr_sm)
				margin-bottom 0
				margin-right: 10px
				max-width 54px
		&__title
			middle()
			text-transform: uppercase
			font-weight: bold
			max-width 100%
			font-size 8px
			@media (min-width: scr_xs)
				font-size 11px
			@media (min-width: scr_sm)
				max-width 60%
				line-height 16px
				font-size 11px
.modal
	padding 0
.modal-dialog
	width 100%
	margin 0
	min-height 100%
	@media (min-width: scr_md)
		min-height none
		margin: 30px auto;
		width 770px
		iframe
			height (648*.562)px
	@media (min-width: scr_lg)
		width 980px
		iframe
			height (900*.562)px

	#Feedback &
		max-width 600px

.modal-content
	full-width()
	border-radius 0
	background black
	.date
		font-weight bold
		color blue
	.divider
		full-width()
		border-bottom 1px solid black
		margin 15px 0 20px
	.text
		min-height 200px
	iframe
		max-width 90%
		margin 15px 5%
		max-height 50%
		@media (min-width: scr_md)
			margin 0
			max-height none
			max-width 100%
	min-height 100%
	@media (min-width: scr_md)
		min-height none
		padding 50px 60px
		border 1px solid blue
	&--white
		background white
		border 0
		padding 30px 20px
		@media (min-width: scr_md)
			padding 30px 40px
		color black !important
		p
			font-size 14px
			line-height 17px
			margin-bottom 18px
			@media (min-width: scr_md)
				font-size 16px
				line-height 20px
		h1
			margin-top 10px
			font-weight bold
			font-size 25px
			margin-bottom: 25px
			@media (min-width: scr_md)
				font-size 30px
	.close
		opacity 1
		position absolute
		z-index 30000000
		right 10px
		top -5px
		svg
			max-width 30px
			path, g
				fill blue
		@media (min-width: scr_md)
			right -100px
			svg
				max-width none
				path, g
					fill white
	img
		max-width 100%
.modal-backdrop.in
	opacity .99
	@media (min-width: scr_md)
		opacity .8

#map
	width 100%
	height 438px

#bg_map
	position absolute
	background black
	top 0
	z-index 1
	left 0
	width 100%
	height 100%
	min-height 850px
	display none
	@media (min-width: scr_sm)
		display block

.no-mobile
	display none
	@media (min-width: scr_sm)
		display block

.toolbar
	.nav--en
		.nav__item
			&:first-of-type
				padding-left:0 !important
			@media (min-width: scr_sm)
				padding: 3px 15.5px 0
			@media (min-width: scr_lg)
				padding: 3px 22.3px 0
				letter-spacing: .3px