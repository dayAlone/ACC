body
	font-family 'Proxima', 'Helvetica Neue', 'Arial', sans-serif
	height 100%
	background-color black
	color white
	&.index
		b('bg_index.jpg', top center no-repeat, black)
a
	transition-property color, background-color, border-radius, box-shadow, border-radius
	transition-duration .3s
	&:hover
		text-decoration none
.container
	max-width 1150px

.wrap 
	min-height: 100%
	padding-bottom 65px
	margin-bottom: -65px
	&:after
		content ""
		display block

html
	height 100%