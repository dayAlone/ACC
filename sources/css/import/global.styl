body
	font-family 'Proxima', 'Helvetica Neue', 'Arial', sans-serif
	height 100%
	background-color black
	color white
	for x in index about
		&.{x}
			b('bg_'+x+'.jpg', top center no-repeat, black)
a
	transition-property color, background-color, border-radius, box-shadow, border-radius
	transition-duration .3s
	&:hover
		text-decoration none
.container
	max-width 1150px

.wrap 
	min-height: 100%
	padding-bottom 65px
	margin-bottom: -65px
	&:after
		content ""
		display block

html
	height 100%

.index-page
	full-width()
	margin-top 495px
	float right
	max-width 700px
	h1
		float right
		padding-bottom 15px
		margin-bottom 20px
		font-size 24px
		text-transform: uppercase
		border-bottom 1px solid rgba(255,255,255,.5)
	.bages
		line-height: 54px
		&__image
			max-width 54px
			margin-right: 10px
		&__title
			middle()
			max-width 60%
			line-height 16px
			font-size 11px
			text-transform: uppercase
			font-weight: bold