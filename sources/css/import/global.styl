body
	font-family 'Proxima', 'Helvetica Neue', 'Arial', sans-serif
	min-height 100%
	height 100%
	color white
	&.map
		min-height 850px
	
a
	transition-property color, background-color, border-radius, box-shadow, border-radius
	transition-duration .3s
	&:hover
		text-decoration none
.container
	max-width 1150px
.wrap 
	min-height: 100%
	padding-bottom 65px
	margin-bottom: -65px
	&:after
		content ""
		display block
	.transparent &
		background transparent
	b('bg.jpg', top center no-repeat, black, cover)
	for x in index about contacts partners tech news
		.{x} &
			b('bg_'+x+'.jpg', top center no-repeat, black, cover)
			
	.index &
		background-size 350% auto
		background-position 54% 40px
		@media (min-width: scr_xs)
			background-size cover
			background-position center center

html
	height 100%

article
	position relative
	z-index 10

.index-page
	full-width()
	float right
	max-width 715px
	margin-top 240px
	@media (min-width: scr_sm)
		margin-top 495px
	h1
		float right
		padding-bottom 15px
		margin-bottom 20px
		text-transform: uppercase
		border-bottom 1px solid rgba(255,255,255,.5)
		text-align center
		font-size 18px
		@media (min-width: scr_sm)
			text-align: right
			font-size 24px
	.bages
		text-align center
		margin-bottom 30px
		@media (min-width: scr_sm)
			margin-bottom 0
			text-align left
			line-height: 54px
		&__image
			max-width 44px
			margin-bottom 10px
			@media (min-width: scr_sm)
				margin-bottom 0
				margin-right: 10px
				max-width 54px
		&__title
			middle()
			text-transform: uppercase
			font-weight: bold
			max-width 100%
			font-size 7px
			@media (min-width: scr_sm)
				max-width 60%
				line-height 16px
				font-size 11px
.modal
	padding 0
.modal-dialog
	width 100%
	margin 0
	min-height 100%
	@media (min-width: scr_md)
		min-height none
		margin: 30px auto;
		width 770px
		iframe
			height (648*.562)px
	@media (min-width: scr_lg)
		width 980px
		iframe
			height (900*.562)px

	#Feedback &
		max-width 600px

.modal-content
	full-width()
	border-radius 0
	background black
	.date
		font-weight bold
		color blue
	.divider
		full-width()
		border-bottom 1px solid black
		margin 15px 0 20px
	.text
		min-height 200px
	iframe
		max-width 90%
		margin 15px 5%
		max-height 50%
		@media (min-width: scr_md)
			margin 0
			max-height none
			max-width 100%
	min-height 100%
	@media (min-width: scr_md)
		min-height none
		padding 50px 60px
		border 1px solid blue
	&--white
		background white
		border 0
		padding 30px 20px
		@media (min-width: scr_md)
			padding 30px 40px
		color black !important
		p
			font-size 14px
			line-height 17px
			margin-bottom 18px
			@media (min-width: scr_md)
				font-size 16px
				line-height 20px
		h1
			margin-top 10px
			font-weight bold
			font-size 25px
			margin-bottom: 25px
			@media (min-width: scr_md)
				font-size 30px
	.close
		opacity 1
		position absolute
		z-index 30000000
		right 10px
		top -5px
		svg
			max-width 30px
			path
				fill blue
		@media (min-width: scr_sm)
			right -65px
			top 0
			svg
				max-width 50px
		@media (min-width: scr_md)
			right -100px
			svg
				max-width none
	img
		max-width 100%
.modal-backdrop.in
	opacity .99
	@media (min-width: scr_sm)
		opacity .8

#map
	width 100%
	height 438px

#bg_map
	position absolute
	background black
	top 0
	z-index 1
	left 0
	width 100%
	height 100%
	min-height 850px
	display none
	@media (min-width: scr_sm)
		display block

.no-mobile
	display none
	@media (min-width: scr_sm)
		display block